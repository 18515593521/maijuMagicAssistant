 /*模态框*/
 /* @import "/pages/template/template.wxss";  */
.box{
  position:absolute;
  margin:auto;
  top:0;
  right:0;
  bottom:0;
  left:0;
  background:rgba(93, 93, 93, 0.5);
  z-index:100;

}
.canvas{
  width:750rpx;
  height:920rpx;
  margin:80rpx 120rpx 0;
}
.downLoad{
  width:500rpx;
  text-align:center;
  color:#fff;
  background: #4abdc2;
  height:60rpx;
  line-height:60rpx;
  margin:80rpx  auto;
  font-size:28rpx;
}
.tipsBox{
  width:400rpx;
  height:200rpx;
  display:flex;
  flex-flow:column nowrap;
  background:#fff;
  border:2rpx solid #4abdc2;
  position:absolute;
  z-index:10000;
  margin:auto;
  top:0;
  bottom:0;
  left:45rpx;
}
.tipsBox .tipText,.tipsBox .sures{
  font-size:24rpx;
  text-align:center;
}
.tipText{
  height:120rpx;
  color:#4abdc2;
  line-height:120rpx;

}
.waitImgBox{
  position:absolute;
  margin:auto;
  width:200rpx;
  height:200rpx;
  top:0;
  left:150rpx;
  bottom:0;
  text-align:center;
}
.waitText{
  width:80rpx;
  height:80rpx;
  margin:70rpx auto;
}
.sures{
  height:80rpx;
  color:#fff;
  line-height:80rpx;
  background:#4abdc2;
}