/* pages/work/product_center/class_product/class_product.wxss */
.to_all_product{
  display:flex;
  flex-flow:row nowrap;
  padding:20rpx;
  height:80rpx;
  box-sizing:border-box;
  border-top:2rpx solid #eee;
  border-bottom:2rpx solid #eee;
}
.all_product{
  font-size:28rpx;
  flex-grow:3;
}
.to_right{
  width:40rpx;
  height:40rpx;
}
.series_class_box{
overflow:hidden;
}
.series_class{
  width:750rpx;
  display:flex;
  flex-flow:row wrap;
}
.series_class .active{
  border:2rpx solid #4abdc2;
  color:#4abdc2;
}
.class_deries_name{
  font-size:30rpx;
  width:750rpx;
  padding:20rpx;
  box-sizing:border-box;
}
.series_text{
  width:230rpx;
  height:60rpx;
  line-height:60rpx;
  text-align:center;
  border:2rpx solid #eee;
  border-radius:10rpx;
  font-size:24rpx;
  margin:10rpx;
  box-sizing:border-box;
}
.submit_data{
  width:750rpx;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size:30rpx;
  color:#fff;
  margin-top:20rpx; 
  background:#4abdc2;
  position:fixed;
  margin:auto;
  bottom:0;
  left:0;
  right:0;
}