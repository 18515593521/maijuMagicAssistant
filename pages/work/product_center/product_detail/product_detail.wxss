/* pages/work/product_center/product_detail/product_detail.wxss */
 /*模态框*/
 @import "/pages/template/template.wxss"; 
.productDetailBox{
  width:750rpx;
  overflow:hidden;
}
.detail_swiper{
  height:750rpx;
}
.product_titles,.specification_list{
  display:flex;
  flex-flow:row nowrap;
  width:750rpx;
}
.productText,.product_param,.product_text,.color_list{
  display:flex;
  flex-flow:column nowrap;
}
.product_param,.big_erweima_box{
  width:750rpx;
  margin-bottom:100rpx;
}
.productText{
  width:550rpx;
  padding:20rpx;
  box-sizing:border-box;
  border-right:2rpx solid #eee;
}
.paddingBox{
  padding:20rpx;
  box-sizing:border-box;
}
.titles{
  font-size:28rpx;
}
.money{
  font-size:32rpx;
  color:#4abdc2;
  margin-top:20rpx;
}
.erweima{
  width:250rpx;
  height:150rpx;
  padding:10rpx 0;
  box-sizing:border-box;
  text-align:center;
}
.erweima image{
  width:130rpx;
  height:130rpx;
}
.class_select_box{
  line-height:100rpx;
  align-items: center;
  height:100rpx;
  width:750rpx;
  box-sizing:border-box;
  border-top:2rpx solid #eee;
  border-bottom:2rpx solid #eee;
  display:flex;
  flex-flow:row nowrap;
}
.to_right{
  width:40rpx;
  height:40rpx;
  float:right;
  margin-left:500rpx;
}
.text{
  background:#eee;
  text-align:center;
  font-size:24rpx;
  line-height:100rpx;
  color:#999;
}
.imageTextDeteail{
  display:flex;
  flex-flow:row nowrap;
  width:750px;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
}
.menu{
  width:375rpx;
  font-size:24rpx;
}
.imageTextDeteail .active{
  border-bottom:2rpx solid #4abdc2;
  color:#4abdc2;
}
.showDetail{
  width:750rpx;
  text-align:center;
}
.showDetail view{
  width:100%;
}
.showDetail image{
  width:100%;
}
.botton_line{
  text-align:center;
  color:#666;
  font-size:24rpx;
  background:#eee;
  height:60rpx;
  line-height:60rpx;
}
.menu_param{
  width:750rpx;
  margin-top:20rpx;
  padding:0 20rpx;
  box-sizing:border-box;
}
.menu_param view:nth-child(1){
  width:20%;
  float:left;
  color:#666;
  font-size:30rpx;
}
.menu_param view:nth-child(2){
  width:80%;
  float:left;
  word-break:break-all;
  font-size:30rpx;
  color:#666;
}
.specificationDetailBox{
  position:fixed;
  margin:auto;
  top:0;
  bottom:0;
  right:0;
  left:0;
  background:rgba(0, 0, 0, 0.5)
}
.specificationDetail{
  position:fixed;
  bottom:0;
  margin:auto;
  background:#fff;
  width:750rpx;
  height:750rpx;
}
.prdduct_detail_box{
  display:flex;
  flex-flow:row nowrap;
  border-bottom:2rpx solid #eee;
  padding:20rpx;
  box-sizing:border-box;
  height:250rpx;
}
.product_img{
  width:250rpx;
  height:250rpx;
  position:absolute;
  margin:auto;
  top:-70rpx;
  padding:20rpx;
  box-sizing:border-box;
  background:#fff;
}
.product_img image{
  width:100%;
  height:100%;
}
.product_text{
  width:460rpx;
  padding:20rpx;
  box-sizing:border-box;
}
.product_text view{
  font-size:26rpx;
  color:#666;
  margin-bottom:20rpx;
}
.attribute{
  font-size:32rpx;
}
.color_item{
  border:2rpx solid #eee;
  border-radius:10rpx;
  padding:20rpx;
  box-sizing:border-box;
  word-break:break-all;
  margin-top:20rpx;
  font-size:24rpx;
}
.specification_item{
  width:199rpx;
  height:60rpx;
  border:2rpx solid #eee;
  border-radius:10rpx;
  margin:0 10rpx 0;
  font-size:24rpx;
  line-height:60rpx;
  text-align:center;
}
.color_list .active,.specification_list .active{
  border:2rpx solid #4abdc2;
  border-radius:10rpx;
}
.big_erweima_box{
  position:fixed;
  margin:auto;
  top:0;
  bottom:0;
  left:0;right:0;
  background:rgba(0, 0, 0, 0.5);
  display:flex;
  flex-flow:column nowrap;
  overflow: hidden;
  z-index:100000;
}
.close{
  width:40rpx;
  height:40rpx;
  float:right;
  margin:30rpx;
}
.bigErweiMaImg{
  width:710rpx;
  height:750rpx;
  margin:auto;
}
.downLoad{
  width:60rpx;
  height:60rpx;
  float:right;
   margin:30rpx;
}
.canvas{
  width:750rpx;
  height:1334rpx;
}
.canvasBox{
  position:absolute;
  margin:auto;
  top:0;
  bottom:0;
  left:0;
  right:0;
  z-index:-1000;
  opacity:0;
}
/* 生成海报 */
.makeCard{
  width:750rpx;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  color:#fff;
  background:#4abdbf;
  font-size:28rpx;
  position:fixed;
  bottom:0;
}
/* 分享的弹框 */
.sharecontents{
  width:600rpx;
  height:380rpx;
  border:2rpx solid #4abdc2;
  border-radius:10rpx;
  overflow:hidden;
  margin:auto;
  background:#fff;
  position:absolute;
  top:0;
  left:0;
  bottom:0;
  right:0;

}
.care,.sure{
  width:50%;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size:26rpx;
  color:#fff;
  background:#4abdbf;
}
.sure{
  border:0;
  border-radius: 0;
}
/* 点击分享弹出框 */
.maskPopup{
  position:fixed;
  margin:auto;
  background:rgba(0, 0, 0, 0.5);
  width:100%;
  height:100%;
  bottom:0;
  left:0;
  z-index:1000;
}
.textBtn{
  width:100%;
  height:80rpx;
  float:left;
  border-top:2rpx solid #4abdc2;
}
.btnsBox{
  width: 100%;
  height: 243rpx;
  position:fixed;
  bottom:0;

}
.btnCard{
  width:750rpx;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  color:#666;
  background:#fff;
  font-size:28rpx;
  border-bottom: 1px solid #fff;
}
.inputMBox{
  width: 580rpx;
  height: 260rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  
}